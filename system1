from fastapi import FastAPI, HTTPException
from pydantic import BaseModel
from typing import List
from datetime import date
import uuid

app = FastAPI()

patients = {}
diagnoses = {}

class Patient(BaseModel):
    national_id: str
    name: str
    date_of_birth: date

class Diagnosis(BaseModel):
    patient_id: str
    hospital: str
    condition: str
    notes: str
    diagnosis_date: date

@app.get("/")
def root():
    return {"message": "Unified Health Record API Running"}

@app.post("/patients")
def create_patient(patient: Patient):
    patient_id = str(uuid.uuid4())
    patients[patient_id] = patient
    diagnoses[patient_id] = []
    return {"patient_id": patient_id}

@app.post("/diagnoses")
def add_diagnosis(record: Diagnosis):
    if record.patient_id not in patients:
        raise HTTPException(status_code=404, detail="Patient not found")

    diagnoses[record.patient_id].append(record)
    return {"status": "ok"}

@app.get("/diagnoses/{patient_id}")
def get_history(patient_id: str) -> List[Diagnosis]:
    if patient_id not in patients:
        raise HTTPException(status_code=404, detail="Patient not found")

    return diagnoses[patient_id]
